<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/apropos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BD4848"
        android:text="A Propos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/demarrer"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/demarrer"
        app:layout_constraintTop_toBottomOf="@+id/demarrer"
        app:layout_constraintVertical_bias="0.633" />

    <Button
        android:id="@+id/demarrer"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:background="#DF4E51"
        android:text="DÃ©marrer le quizz"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <ImageView
        android:id="@+id/pokeball"
        android:layout_width="428dp"
        android:layout_height="729dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pokeball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pokeball" />

    <TextView
        android:id="@+id/title"
        android:layout_width="129dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Pokequizz"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/demarrer"
        app:layout_constraintEnd_toEndOf="@+id/demarrer"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="@+id/demarrer"
        app:layout_constraintTop_toTopOf="@+id/pokeball"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/solutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C54349"
        android:text="Solutions"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/apropos"
        app:layout_constraintEnd_toEndOf="@+id/demarrer"
        app:layout_constraintStart_toStartOf="@+id/demarrer"
        app:layout_constraintTop_toBottomOf="@+id/demarrer" />

</androidx.constraintlayout.widget.ConstraintLayout>