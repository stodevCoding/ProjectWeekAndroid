<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:id="@+id/nameApplicationTextView"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginTop="50dp"
        android:text="PokéQuiz"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTeamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="by PokéTeamInc"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@+id/nameApplicationTextView"
        app:layout_constraintStart_toStartOf="@+id/nameApplicationTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameApplicationTextView" />

    <TextView
        android:id="@+id/nameHubertTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hubert DE BELSUNCE"
        app:layout_constraintStart_toStartOf="@+id/nameTeamTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTeamTextView" />

    <TextView
        android:id="@+id/nameFelixTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Felix LITOU"
        app:layout_constraintStart_toStartOf="@+id/nameHubertTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameHubertTextView" />

    <TextView
        android:id="@+id/nameAnthoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Anthony CUSTODIO"
        app:layout_constraintStart_toStartOf="@+id/nameFelixTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameFelixTextView" />

    <TextView
        android:id="@+id/titleVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Version : "
        app:layout_constraintEnd_toStartOf="@+id/versionValueTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameAnthoTextView" />

    <TextView
        android:id="@+id/versionValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/titleVersionTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameAnthoTextView"
        tools:text="0.0.0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>